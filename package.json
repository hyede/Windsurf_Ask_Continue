{
  "name": "windsurf-ask-continue",
  "displayName": "Windsurf 对话增强工具",
  "description": "Windsurf 对话增强工具 - 让 AI 对话永不结束 | 二次开发: 传康KK",
  "version": "1.3.2",
  "publisher": "Rhongomiant1227",
  "author": {
    "name": "Rhongomiant1227 & 1837620622",
    "url": "https://github.com/1837620622"
  },
  "contributors": [
    {
      "name": "Rhongomiant1227 (原作者)",
      "url": "https://github.com/Rhongomiant1227"
    },
    {
      "name": "1837620622 (二次开发)",
      "url": "https://github.com/1837620622"
    }
  ],
  "homepage": "https://github.com/Rhongomiant1227",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rhongomiant1227/Windsurf_Ask_Continue"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "ai",
    "windsurf",
    "continue",
    "infinite"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "askContinue.showStatus",
        "title": "Ask Continue: Show Status",
        "icon": "$(info)"
      },
      {
        "command": "askContinue.restart",
        "title": "Ask Continue: Restart Server",
        "icon": "$(refresh)"
      },
      {
        "command": "askContinue.openPanel",
        "title": "Ask Continue: Open Panel",
        "icon": "$(comment-discussion)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "askContinue",
          "title": "Ask Continue",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "askContinue": [
        {
          "type": "webview",
          "id": "askContinue.statusView",
          "name": "状态面板",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "configuration": {
      "title": "Ask Continue",
      "properties": {
        "askContinue.serverPort": {
          "type": "number",
          "default": 23983,
          "description": "Port for the Ask Continue HTTP server"
        },
        "askContinue.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the server when Windsurf opens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "undici": "^5.28.4",
    "vsce": "^2.11.0"
  }
}
